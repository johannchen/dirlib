<!DOCTYPE html>
<html>
<head>
  <title>Church Directory and Library</title>
  <%= stylesheet_link_tag "style", "mystyle", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/themes/smoothness/jquery-ui.css" %>
  <%= javascript_include_tag :defaults, "https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="wrapper" class="hfeed">
  <div id="header">
    <div id="masthead">
      <div id="branding" role="banner">
                <h1 id="site-title">
          <span>
            <a href="" title="Church Directory and Library" rel="home">Church Directory and Library</a>
          </span>

        </h1>
        <div id="site-description">Sharing resources within your church</div>

                </div><!-- #branding -->

      <div id="user_nav">
        <% if current_user %>
          Logged in as <%= current_user.name %> |
          <%= link_to "Log out", log_out_path %>
        <% else %>
          <%= link_to "Sign up", sign_up_path %> |
          <%= link_to "Log in", log_in_path %>
        <% end %>
      </div>
      <div id="access" role="navigation">
                <div class="skip-link screen-reader-text"><a href="#content" title="Skip to content">Skip to content</a></div>

                <div class="menu">
<ul><li class="current_page_item"><%= link_to 'Home', root_url %></a></li>
<% if current_user %>
<li class="page_item page-item-2"><%= link_to 'Profile', user_path(current_user) %></li>
<li class="page_item page-item-2"><%= link_to 'Directory', contacts_path %></li>
<% if can? :read, @group %>
<li class="page_item page-item-2"><%= link_to 'Group', groups_path %></li>
<% end %>
<% end %>
<li class="page_item page-item-2"><a href="#" title="About">About</a></li>
</ul></div>
      </div><!-- #access -->
    </div><!-- #masthead -->
  </div><!-- #header -->

  <div id="main">

    <div id="container">
      <div id="content" role="main">
<% flash.each do |name, msg| %>
<div class="ui-widget">
  <div class="ui-state-highlight ui-corner-all" style="padding: 0 .7em;">
  <%= msg %><br />
  </div>
</div>
<% end %>
<%= yield %>
      </div><!-- #content -->
    </div><!-- #container -->

    <div id="primary" class="widget-area" role="complementary">
      <ul class="xoxo">
      <%= yield :sidebar%>
</ul>
    </div><!-- #primary .widget-area -->

  </div><!-- #main -->

  <div id="footer" role="contentinfo">
    <div id="colophon">
      <div id="site-info">
        <a href="" title="" rel="home">Sponsors</a>
      </div><!-- #site-info -->
    </div><!-- #colophon -->
  </div><!-- #footer -->
</div><!-- #wrapper -->

</body>
</html>
