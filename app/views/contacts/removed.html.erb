<%= render 'users/admin_sidebar' %>

<h1>Removed Contacts</h1>

<table>
  <tr>
    <th>Name</th><th>Email</th><th>Cell</th><th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.email%></td>
    <td><%= number_to_phone(contact.cell_phone)%></td>
    <td><%= link_to 'Show', contact %>
    <% if can? :update, Contact %>
      | <%= link_to 'Activate', activate_contact_path(contact), :method => :put %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

