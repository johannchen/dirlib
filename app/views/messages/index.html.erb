<%= render "message_sidebar" %>

<h1>Listing messages</h1>

<div id="messages">
<% if @messages.present? %>
<ul>
<% @messages.each do |message| %>
  <li>
    <%= message.title %>
    <%= message.speaker %>
    <%= message.mdate %>
    <%= link_to 'Delete', message_path(message), :confirm => "This message will be deleted. Are you sure?", :method => :delete %>
  </li>
<% end %>
</ul>
<% else %>
<p>no messages found.</p>
<% end %>
</div>

<%= paginate @messages %>
