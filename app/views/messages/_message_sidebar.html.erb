<% content_for :sidebar do %>
<li id="search-2" class="widget-container widget_search">
<h3>Search messages by title or speaker</h3>
<%= form_tag messages_path, :method => 'get' do %>
  <div><label class="screen-reader-text" for="search">Search for:</label> 
  <%= text_field_tag :search, params[:search] %> 
  <%= submit_tag "Search", :name => nil %>
  </div> 
<% end %>
</li>
<li id="recent-posts-2" class="widget-container"> 
  <h3 class="widget-title">My Messages</h3>   
    <ul>
        <li><%= link_to 'Show messages', messages_path %></li>
        <li><%= link_to 'Add message', new_message_path %></li>
    </ul>
</li>
<% end %>


