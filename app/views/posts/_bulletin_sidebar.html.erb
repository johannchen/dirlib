<% content_for :sidebar do %>
<li id="search-2" class="widget-container widget_search">
<h3>Search posts by title</h3>
<% form_tag posts_path, :method => 'get' do %>
  <div><label class="screen-reader-text" for="search">Search for:</label> 
  <%= text_field_tag :search, params[:search] %> 
  <%= submit_tag "Search", :name => nil %>
  </div> 
<% end %>
</li>
<li id="recent-posts-2" class="widget-container"> 
  <h3 class="widget-title">My Posts</h3>   
    <ul>
        <li><%= link_to 'Show posts', posts_path %></li>
        <li><%= link_to 'Add post', new_post_path %></li>
    </ul>
</li>
<li id="recent-posts-2" class="widget-container"> 
  <h3 class="widget-title">Filter by Category</h3>   
    <ul>
      <% Category.order(:name).each do |category| %>
        <li><%= link_to category.name, category_posts_url(category) %></li>
      <% end %>
    </ul>
</li>
<% end %>


