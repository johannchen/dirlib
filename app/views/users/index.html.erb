<%= render 'admin_sidebar' %>

<h1>Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th># Contacts</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= "Admin" if user.admin %></td>
    <td><%= link_to user.contacts.size, assign_user_path(user) %></td>
    <td>
    <%= link_to 'Edit', edit_user_path(user) %> | 
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
