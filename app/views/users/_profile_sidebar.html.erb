<% content_for :sidebar do %>
  <h3 class="widget-title">My Profile</h3>   
    <ul>
        <li><%= link_to 'Change password', edit_user_path(@user) %></li>
        <% if contact =  @user.contact %>
        <li><%= link_to 'Edit profile', edit_contact_path(contact) %></li>
        <% else %>
        <li><%= link_to 'Edit profile', new_contact_path(:profile => "true") %></li>
        <% end %>
    </ul>
<% end %>

