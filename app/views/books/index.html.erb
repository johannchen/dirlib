<%= render 'library_sidebar' %>
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Authors</th>
    <th>Owner</th>
    <th>Borrower</th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td><%= link_to book.title, book %></td>
    <td><%= book.authors %></td>
    <td><%= link_to book.owner_name, book.user.contact %></td>
    <td><%= link_to book.borrower_name, book.contact unless book.contact_id.blank? %></td>
  </tr>
<% end %>
</table>
<%= paginate @books %>
