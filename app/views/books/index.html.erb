<h1>Books</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td><%= book.title%></td>
    <td><%= link_to 'Show', book%> | 
    <%= link_to 'Edit', edit_book_path(book) %> | 
    <%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
